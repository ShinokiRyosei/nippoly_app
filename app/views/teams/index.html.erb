<div class="text-center">
  <h2>Log in to an exist team</h2>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with method: :get, url: teams_path, local: true  do |f| %>

      <div class="form-group">
        <%= f.label :team_name, 'Team name' %>
        <%= f.text_field :team_name, class: 'form-control' %>
      </div>

      <%= f.submit 'Search', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>